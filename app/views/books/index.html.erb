<div class="container-main">
  <div class="index_banner d-flex flex-column align-items-center">
       <h1 class="title_library">BOOKS LIBRARY</h1>
       <div class="container">
          <div class="row">
            <% @books.first(8).each do |book| %>
             <div class="card d-flex flex-column align-items-center istvan">
                <%= cl_image_tag book.image, height: 200, width: 250, crop: :fill %>
              <div class="card-book-info d-flex flex-row justify-content-between align-items-center">
                <div class="d-flex flex-column justify-content-start card-infos">
                  <h2 class="card-book-title"><%= book.title %></h2>
                  <div class="christophe d-flex flex-row justify-content-between align-items-center">
                    <h4 class="card-book-author"><%= book.author %></h4>
                      <h7 id="star">‚≠ê <%= book.average_rating %></h7 id="star">
                    <% if policy(book).show? %>
                      <p><%= link_to "Details", domain_book_path(params[:domain_id],book), class: 'btn-details' %></p>
                    <% end %>
                </div>
                </div>
              </div>
             </div>
            <% end %>
          </div>
       </div>
       <% if policy(Book).new? %>
          <%= link_to "Create a New Book?", new_domain_book_path, class: 'btn-details2' %>
       <% end %>
  </div>

  <% if !flash[:notice].blank? %>
     <div class = "alert alert-info">
        <%= flash[:notice] %>
     </div>

  <% end %>

</div>
