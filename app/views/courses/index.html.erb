 <form class="form-inline">
      <%= form_tag domain_courses_path, method: :get do %>
        <%= text_field_tag :query,
          params[:query],
          class: "form-control",
          placeholder: "Find a course"
        %>
        <%= submit_tag "Search", class: "btn btn-primary" %>
      <% end %>

    </form>
<% @courses.each do |course| %>
  <%= course.name %> <br>
<% end  %>
