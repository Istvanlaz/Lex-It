
<div class="note-reader active">
  <% if !note.nil? %>
    <div  class="url"
          data-target='sliders.notes'
          data-controller="pdf"
          data-pdf='<%= (url_for(note.content)).to_json %>'></div>

      <div class="pdf-reader"
           data-target='sliders.notes'>

        <% (1..10).each_with_index do |number| %>
          <canvas class="pdf" id="the-canvas-<%= number %>"></canvas>
        <% end %>
      </div>

    </div>
  <% end %>
</div>

<script src="//mozilla.github.io/pdf.js/build/pdf.js"></script>
